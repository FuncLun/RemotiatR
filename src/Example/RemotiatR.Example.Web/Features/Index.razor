@page "/"

@inject IMapper  _mapper;

<h1>Hello, world!</h1>

<h2>Registered Services</h2>
<ul>
    @foreach (var service in Program.Services)
    {
        <li>@service.ServiceType.FullName : @service.ImplementationType?.FullName</li>
    }
</ul>

<h2>Assembly Types</h2>
<ul>
    @foreach (var type in typeof(Program).Assembly.GetTypes().Concat(typeof(Example.Shared.SharedMarker).Assembly.GetTypes()))
    {
        <li>@type.FullName</li>
    }
</ul>

@code {
    protected override Task OnInitializedAsync()
    {
        return Task.CompletedTask;
    }
}